    <script type="text/javascript">
         function ShowModal(ModalName) {
            try {

                //$("#PopUpModal_" + ModalName).modal('show');
                let modal = new bootstrap.Modal(document.getElementById("PopUpModal_" + ModalName));
                modal.show();
            }
            catch (error) {

            }
        }
        function CloseModal(ModalName) {
            try {
                let modalElement = document.getElementById("PopUpModal_" + ModalName);
                if (!modalElement) {
                    console.error("Modal not found:", "PopUpModal_" + ModalName);
                    return;
                }
                let modal = bootstrap.Modal.getInstance(modalElement);
                if (modal) {
                    modal.hide();
                } else {
                    console.error("Modal instance not found:", modalElement);
                }
            } catch (error) {
                console.error("Error closing modal:", error);
            }
        }
        function registerScrollEvent(dotNetObject) {
            const container = document.getElementById("scroll-container");

            if (!container) {
                console.error("Scroll container not found.");
                return;
            }
            container.addEventListener("scroll", () => {
                if (container.scrollTop + container.clientHeight >= container.scrollHeight - 10) {
                    dotNetObject.invokeMethodAsync("OnScrollReachedBottom");
                }
            });
        }

    </script>
</body>

</html>
